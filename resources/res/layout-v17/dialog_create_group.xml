        <TextView android:textSize="18sp" android:id="@+id/community_semicolon_text_view" android:background="@color/vector_silver_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/semicolon_sign" android:layout_toLeftOf="@+id/community_hs_name_text_view" android:layout_centerVertical="true" android:layout_toStartOf="@+id/community_hs_name_text_view"/>
        <TextView android:textSize="18sp" android:id="@+id/community_hs_name_text_view" android:background="@color/vector_silver_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>
