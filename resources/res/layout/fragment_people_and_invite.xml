<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/ly_invite_contacts_to_tchap" android:clickable="true" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginLeft="24dp">
        <ImageView android:id="@+id/icon_add_contacts_to_tchap" android:layout_width="41dp" android:layout_height="41dp" android:layout_marginTop="10dp" android:src="@drawable/tchap_ic_add_contact"/>
        <TextView android:textSize="16sp" android:textColor="@color/tchap_text_color_light" android:id="@+id/tv_invite_contacts_to_tchap" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="20dp" android:text="@string/tchap_invite_contacts_to_tchap" android:layout_toRightOf="@+id/icon_add_contacts_to_tchap"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/encapsule" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/ly_invite_contacts_to_tchap">
        <include layout="@layout/fragment_people"/>
    </RelativeLayout>
</RelativeLayout>
