<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/invite_view" android:layout_width="match_parent" android:layout_height="130dp">
    <RelativeLayout android:id="@+id/room_desc" android:layout_width="match_parent" android:layout_height="74dp">
        <FrameLayout android:id="@+id/room_avatar_layout" android:layout_width="@dimen/hexagonal_avatar_size" android:layout_height="@dimen/hexagonal_avatar_size" android:layout_marginLeft="16dp" android:layout_centerVertical="true">
            <fr.gouv.tchap.util.HexagonMaskView android:layout_gravity="center" android:id="@+id/room_avatar_hexagon" android:background="@color/riot_primary_background_color_light" android:layout_width="@dimen/hexagonal_avatar_size" android:layout_height="@dimen/hexagonal_avatar_size" android:scaleType="centerCrop" android:adjustViewBounds="true" android:maxWidth="@dimen/hexagonal_avatar_size" android:maxHeight="@dimen/hexagonal_avatar_size"/>
            <im.vector.view.VectorCircularImageView android:layout_gravity="center" android:id="@+id/room_avatar" android:visibility="gone" android:layout_width="@dimen/chat_avatar_size" android:layout_height="@dimen/chat_avatar_size"/>
        </FrameLayout>
        <ImageView android:id="@+id/room_avatar_encrypted_icon" android:visibility="invisible" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginLeft="33dp" android:src="@drawable/e2e_verified" android:tint="?attr/padlock_icon_tint_color" android:layout_alignLeft="@+id/room_avatar_layout" android:layout_alignBottom="@+id/room_avatar_layout"/>
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="6dp" android:layout_toRightOf="@+id/room_avatar_layout" android:layout_centerVertical="true">
            <TextView android:textSize="16sp" android:textColor="?attr/vctr_riot_primary_text_color" android:ellipsize="end" android:id="@+id/room_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:layout_toLeftOf="@+id/room_unread_count" android:fontFamily="sans-serif-regular"/>
            <TextView android:textSize="14sp" android:textColor="?attr/vctr_default_text_light_color" android:ellipsize="end" android:id="@+id/room_message" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1" android:layout_below="@+id/room_name" android:layout_alignRight="@+id/room_name"/>
            <TextView android:textSize="12sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/room_unread_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:minWidth="25dp" android:layout_alignBaseline="@+id/room_name" android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:layout_below="@+id/room_desc" android:layout_centerHorizontal="true">
        <Button android:textSize="14sp" android:textColor="@android:color/white" android:id="@+id/room_invite_join_button" android:background="?attr/vctr_default_icon_tint_color" android:layout_width="wrap_content" android:layout_height="match_parent" android:minWidth="130dp" android:text="@string/join" android:fontFamily="sans-serif-medium"/>
        <Button android:textSize="14sp" android:textColor="@android:color/white" android:id="@+id/room_invite_reject_button" android:background="?attr/vctr_default_icon_tint_color" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="16dp" android:minWidth="130dp" android:text="@string/reject" android:fontFamily="sans-serif-medium"/>
    </LinearLayout>
</RelativeLayout>
